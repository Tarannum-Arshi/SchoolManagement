@model IEnumerable<SchoolManagement.Models.ViewModels.DuesFee>
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Fee Payment";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Index.css" />
</head>
<body>
    <table id="studfee" class="table table-striped table-bordered" style="width:100%">
            <tr class="table-info">
                <th>Name</th>
                <th>Email</th>
                <th>Month</th>
                <th>Amount</th>
            </tr>
        @foreach (var stud in Model)
        {
            <tr>
                <td>@stud.Name</td>
                <td>@stud.Email</td>
                <td>@stud.Month</td>
                <td>@stud.Fee</td>
            </tr>
        }
    </table>
    <a type="submit" class="btn btn-primary form-control" asp-area="Admins" asp-controller="Fee" asp-action="Alert">Send Alert</a>
</body>
</html>



