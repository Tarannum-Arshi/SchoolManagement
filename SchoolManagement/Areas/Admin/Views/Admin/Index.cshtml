@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "SchoolManagement";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Index.css" />
</head>
<body>

    <div class="col-2 text-right" style="float:right">
        <a type="submit" class="btn btn-primary form-control" asp-area="Users" asp-controller="Login" asp-action="Logout">Logout</a>

    </div>
    <div class="col-2 text-right" style="float:right">
        <img src="\Images\@User.FindFirst("image").Value" width="30%" style="border-radius:5px; border:1px solid #4cff00">
    </div>
    <div class="tab">
        <h3 class="btn-block">Welcome @User.FindFirst("names").Value  </h3>
        <a class="tablinks" asp-area="Admin" asp-controller="Admin" asp-action="Register">Add Admin</a>
        <a class="tablinks" asp-area="Admin" asp-controller="Admin" asp-action="TeacherRegister">Add New Teacher</a>
        <a class="tablinks" asp-area="Admin" asp-controller="Admin" asp-action="StudentRegister">Add New Student</a>
        <a class="tablinks" asp-area="Admin" asp-controller="Admin" asp-action="AddClass">Add Class</a>
        <a class="tablinks" asp-area="Admin" asp-controller="Admin" asp-action="EditAdmin">Edit Admin Details</a>
        <a class="tablinks" asp-area="Admin" asp-controller="Edit" asp-action="TeacherSearch1">Edit Teacher Details</a>
        <a class="tablinks" asp-area="Admin" asp-controller="Edit" asp-action="StudentSearch1">Edit Student Details</a>
        <a class="tablinks" asp-area="Admin" asp-controller="Fee" asp-action="Index">Check Fee Dues</a>
        <a class="tablinks" asp-area="Admin" asp-controller="Leave" asp-action="Index">Approve</a>

    </div>
</body>
</html>