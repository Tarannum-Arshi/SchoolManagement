@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "SchoolManagement";
}

<div class="text-center">
    <h1 class="display-4">Welcome Admin</h1>
</div>

<hr />
<div class="col-6 text-right">
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Admin" asp-action="TeacherRegister">Register New Teacher</a>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Admin" asp-action="StudentRegister">Register New Student</a>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Admin" asp-action="Register">Register Admin</a>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Admin" asp-action="AddClass">Add New Class</a>
</div>
<hr />
<div class="col-6 text-right">
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Admin" asp-action="TEdit">Edit Teacher Details</a>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Admin" asp-action="SEdit">Edit Student Details</a>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Admin" asp-action="EditAdmin">Edit Admin Details</a>
</div>
