@model SchoolManagement.Models.ViewModels.StudentUserDetails
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "SchoolManagement";
}
<div class="col-2 text-right" style="float:right">
    <img src="\Images\@User.FindFirst("image").Value" width="30%" style="border-radius:5px; border:1px solid #4cff00">
</div>
<div class="col-2 text-right" style="float:right">
    <a type="submit" class="btn btn-primary form-control" asp-area="Users" asp-controller="Login" asp-action="Logout">Logout</a>
</div>
<table id="tblStudent" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr class="table-info">
            <th>UserId</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Gender</th>
            <th>DOB</th>
            <th>Email</th>
            <th>Image</th>
            <th>Class</th>
            <th></th>
        </tr>
    </thead>
</table>


@section Scripts{
    <script src="~/js/studentedit.js"></script>
}


