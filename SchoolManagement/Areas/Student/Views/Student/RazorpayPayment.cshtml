@*Create this model*@
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@model SchoolManagement.Models.Payments

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Payment Initiate</title>

    @*Link this css*@
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="col-2 text-right" style="float:right">
        <a type="submit" class="btn btn-primary form-control" asp-area="Users" asp-controller="Login" asp-action="Logout">Logout</a>

    </div>
    <div class="col-2 text-right" style="float:right">
        <img src="\Images\@User.FindFirst("image").Value" width="30px" height="40px" style="border-radius:5px; border:1px solid #4cff00">
    </div>
    <div class="container login-container">
        <h1>Fee Payment</h1>
        <div class="login-card">
            <div class="login-card-body">
                @using (Html.BeginForm("CreateOrder", "Student", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <label for="name">Customer Name</label>
                        @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
                    </div>
                    <div class="row">
                        <label for="email">Email ID</label>
                        @Html.TextBoxFor(x => x.email, new { @class = "form-control" })
                    </div>
                    <div class="row">
                        <label for="contactNumber">Contact Number</label>
                        @Html.TextBoxFor(x => x.contactNumber, new { @class = "form-control" })
                    </div>
                    <div class="row">
                        <label for="address">Address</label>
                        @Html.TextBoxFor(x => x.address, new { @class = "form-control" })
                    </div>
                    <div class="row">
                        <label for="amount">Amount (INR)</label>
                        @Html.TextBoxFor(x => x.amount, new { @class = "form-control" })
                    </div>
                    @if (ViewBag.FeeAmount == 0)
                    {
                        <div class="row">
                            <label>Already Paid</label>
                        </div>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary">Submit</button>}
                }
            </div>
        </div>
    </div>
</body>
</html>